{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Trimps",
  "version": "5.10.1",
  "identifier": "com.greensatellite.trimps",
  "build": {
    "frontendDist": "../",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run serve"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Trimps",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {},
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com"
    }
  }
}
